@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employee</h1>

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>@Html.DisplayNameFor(emp=>emp.Name)</td>
            <td>Email</td>
            <td>Password</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td><a asp-controller="Employees" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <a asp-controller="Employees" asp-action="Update" asp-route-id="@item.Id">Update</a>
                </td>
            </tr>
        }
    </tbody>
    <a href="/Employees/Create" class= "btn btn-outline-danger "> New</a>
</table>

